{{>layouts/header}}

<div class="input-group mb-3">
    {{#keyword}}
        <input type="text" name="keyword" class="form-control" placeholder="도로명 주소를 검색하세요" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2" href="?page={{current}}&keyword={{keyword}}">입력</button>
    {{/keyword}}
    {{^keyword}}
        <input type="text" name="keyword" class="form-control" placeholder="도로명 주소를 검색하세요" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2" href="?page={{current}}">입력</button>

    {{/keyword}}

</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">hospital name</th>
        <th scope="col">business type</th>
        <th scope="col">address</th>
        <th scope="col">number of healthcare provider</th>
        <th scope="col">number of patient room</th>
        <th scope="col">number of beds</th>
    </tr>
    </thead>
    <tbody>

    {{#hospitals}}
        <tr>
            {{#id}}
                <th scope="row">{{id}}</th>
            {{/id}}
            {{^id}}
                <th scope="row">unknown</th>
            {{/id}}

            {{#hospitalName}}
                <td>{{hospitalName}}</td>
            {{/hospitalName}}
            {{^hospitalName}}
                <th scope="row">unknown</th>
            {{/hospitalName}}

            {{#businessTypeName}}
                <td >{{businessTypeName}}</td>
            {{/businessTypeName}}
            {{^businessTypeName}}
                <th scope="row">unknown</th>
            {{/businessTypeName}}

            {{#roadNameAddress}}
                <td >{{roadNameAddress}}</td>
            {{/roadNameAddress}}
            {{^roadNameAddress}}
                <th scope="row">unknown</th>
            {{/roadNameAddress}}

            {{#healthcareProviderCount}}
                <td >{{healthcareProviderCount}}</td>
            {{/healthcareProviderCount}}
            {{^healthcareProviderCount}}
                <th scope="row">unknown</th>
            {{/healthcareProviderCount}}

            {{#patientRoomCount}}
                <td >{{patientRoomCount}}</td>
            {{/patientRoomCount}}
            {{^patientRoomCount}}
                <th scope="row">unknown</th>
            {{/patientRoomCount}}

            {{#totalNumberOfBeds}}
                <td >{{totalNumberOfBeds}}</td>
            {{/totalNumberOfBeds}}
            {{^totalNumberOfBeds}}
                <th scope="row">unknown</th>
            {{/totalNumberOfBeds}}

        </tr>
    {{/hospitals}}


</table>

{{#keyword}}

    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="?page={{previous}}&keyword={{keyword}}">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="?page={{next}}&keyword={{keyword}}">Next</a>
        </li>
    </ul>

{{/keyword}}

{{^keyword}}

    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="?page={{previous}}">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="?page={{next}}">Next</a>
        </li>
    </ul>

{{/keyword}}

{{>layouts/footer}}